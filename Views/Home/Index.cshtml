@{
    ViewBag.Title = "XRayHub Home";
}

<main>
    <section class="jumbotron text-center">
        <div class="container">
            <i class="fas fa-x-ray fa-5x text-primary"></i>
            <h1 class="display-4 mt-3">Welcome to XRayHub</h1>
            <p class="lead">Your Trusted Platform for Managing X-ray Records</p>
            <p class="lead">
                XRayHub is your one-stop solution for securely storing and managing X-ray records online.
                Simplify your workflow and enhance patient care with our advanced features.
            </p>
            <p>
                <a href="/Account/Login" class="btn btn-primary btn-lg">Get Started</a>

                <a href="#" class="btn btn-secondary btn-lg">Learn More</a>
            </p>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <section class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-folder-open fa-3x text-primary mb-3"></i>
                        <h2 class="card-title">Easy Record Management</h2>
                        <p class="card-text">
                            Store, organize, and access X-ray records with ease.
                            Our user-friendly interface simplifies the process.
                        </p>
                    </div>
                </div>
            </section>
            <section class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-lock fa-3x text-primary mb-3"></i>
                        <h2 class="card-title">Secure & Confidential</h2>
                        <p class="card-text">
                            Your patients' records are safe with us. We prioritize security
                            and ensure confidentiality for all your data.
                        </p>
                    </div>
                </div>
            </section>
            <section class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-globe fa-3x text-primary mb-3"></i>
                        <h2 class="card-title">Access Anywhere</h2>
                        <p class="card-text">
                            Access X-ray records from anywhere, at any time, on any device.
                            Streamline your workflow and provide better patient care.
                        </p>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>

