@model XRayHub.Models.XrayRecord

<div class="modal-header">
    <h5 class="modal-title">Update Record</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    @using (Html.BeginForm("UpdateRecord", "MedicalPractitioner", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.RecordID)

        <div class="form-group">
            <label>Description</label>
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Image</label>
            <input type="file" name="XrayImage" class="form-control" />
            <img src="@Url.Content(Model.XrayImagePath)" width="100" alt="Current X-ray image" />
        </div>

        <button type="submit" class="btn btn-primary">Update Record</button>
    }
</div>
