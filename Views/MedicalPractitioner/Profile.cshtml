@model XRayHub.Models.MedicalPractitioner

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

<!-- Bootstrap JS and Popper.js -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<style>
    .pac-container {
        z-index: 10000 !important;
    }

</style>
<div class="container mt-5">
    <div class="d-flex justify-content-start align-items-center">
        <!-- Icon representing the medical practitioner -->
        <i class="fas fa-user-md fa-5x text-primary"></i>
        <div class="ml-4">
            <h2>@Model.FirstName @Model.LastName's Profile</h2>
            <span class="badge badge-info">@Model.Specialization</span>
        </div>
    </div>

    <!-- Profile Details Section -->
    <div class="card mt-5">
        <div class="card-body">
            <h5 class="card-title">Profile Details</h5>
            <dl class="row">
                <dt class="col-sm-3">First Name:</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Last Name:</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Specialization:</dt>
                <dd class="col-sm-9">@Model.Specialization</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Facility:</dt>
                <dd class="col-sm-9">@Model.Facility</dd>
            </dl>
        </div>
    </div>

    <!-- Edit Profile Button -->
    <div class="mt-3">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editProfileModal">
            Edit Profile
        </button>
    </div>

    <!-- Edit Profile Modal -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">Edit Profile</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("UpdateProfile", "MedicalPractitioner", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" class="form-control" name="FirstName" value="@Model.FirstName">
                        </div>

                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" class="form-control" name="LastName" value="@Model.LastName">
                        </div>

                        <div class="form-group">
                            <label>Specialization</label>
                            <input type="text" class="form-control" name="Specialization" value="@Model.Specialization">
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" name="Email" value="@Model.Email">
                        </div>

                        <!-- Facility -->
                        <div class="form-group" id="facilityRow">
                            @Html.LabelFor(m => m.Facility)
                            @Html.TextBoxFor(m => m.Facility, new { @class = "form-control", placeholder = "Facility" })
                        </div>
                        @Html.HiddenFor(model => model.PractitionerID)

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" value="Save Changes">
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAwX_FOFuq5YOdd2Gd6Vc9KhefAJ396bd8&libraries=places"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var $facilityInput = $("#Facility");
        var autocomplete = new google.maps.places.Autocomplete($facilityInput[0]);

        autocomplete.setFields(["address_components", "geometry", "icon", "name"]); // Adjust the fields as per your needs.

        autocomplete.addListener("place_changed", function () {
            var place = autocomplete.getPlace();
            if (!place.geometry) {
                console.warn("Autocomplete's returned place contains no geometry");
                return;
            }
            // Optionally, you can extract more information from the selected place here if needed.
        });
    });


</script>
